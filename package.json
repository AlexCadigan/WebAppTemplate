{
	"name": "webapptemplate",
	"version": "1.0.0",
	"author": "Alex Cadigan",
	"description": "Web app template",
	"keywords": [
		"Web",
		"App",
		"Template"
	],
	"license": "MIT",
	"main": "StartApp.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AlexCadigan/WebAppTemplate.git"
	},
	"homepage": "https://github.com/AlexCadigan/WebAppTemplate#readme",
	"bugs": {
		"url": "https://github.com/AlexCadigan/WebAppTemplate/issues"
	},
	"workspaces": [
		"client",
		"server",
		"tests"
	],
	"scripts": {
		"start": "concurrently --kill-others \"npm run startServer\" \"npm run startClient\"",
		"startServer": "npx nodemon",
		"startClient": "npm run start --prefix client",
		"lint": "npm run prettier && npm run eslint",
		"prettier": "npx prettier --write .",
		"eslint": "npx eslint --fix .",
		"test": "npm run test --prefix tests"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.38.1",
		"concurrently": "^7.6.0",
		"eslint": "^8.24.0",
		"eslint-plugin-jest": "^27.0.4",
		"eslint-plugin-jsdoc": "^39.3.6",
		"eslint-plugin-react": "^7.31.8",
		"husky": "^4.3.8",
		"lint-staged": "^13.0.3",
		"nodemon": "^2.0.20",
		"prettier": "^2.7.1",
		"typescript": "^4.8.4"
	}
}
